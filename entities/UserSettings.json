{
  "name": "UserSettings",
  "type": "object",
  "properties": {
    "notifications_per_day": {
      "type": "number",
      "default": 3,
      "minimum": 1,
      "maximum": 10,
      "description": "Number of smile notifications per day"
    },
    "start_hour": {
      "type": "number",
      "default": 8,
      "minimum": 0,
      "maximum": 23,
      "description": "Hour to start sending notifications (24h format)"
    },
    "end_hour": {
      "type": "number",
      "default": 20,
      "minimum": 0,
      "maximum": 23,
      "description": "Hour to stop sending notifications (24h format)"
    },
    "timezone": {
      "type": "string",
      "default": "UTC",
      "description": "User's timezone"
    },
    "notifications_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Whether notifications are enabled"
    },
    "last_notification_sent": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of last notification sent"
    },
    "newsletter_subscribed": {
      "type": "boolean",
      "default": false,
      "description": "Whether user is subscribed to the newsletter"
    },
    "subscription_email": {
      "type": "string",
      "format": "email",
      "description": "Email for newsletter subscription"
    }
  },
  "required": []
}
